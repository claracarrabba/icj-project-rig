{% extends '_templates/base.njk' %}

{% block page_title %}Foodie Favorites{% endblock %}

{% block page_description %}The index search description for this page goes here.{% endblock %}

{% block content %}
<div class="container">
  <h1>Foodie Favorites</h1>
  <h2>Your guide to the best local eats in Houston, Austin, and New York City</h2>
  <h3>Recommended</h3>
  <div class="row">
    {% for restaurant in recommended.Recommended %}
      <div class="col">
        <a href="restaurants/{{ restaurant.slug }}.html"><img src="img/{{ restaurant.slug }}.jpg" width=300 height=200 alt="" aria-label="Info" class="img-fluid"></a>
        <h4>{{ restaurant.Name }}</h4>
      </div>
    {% endfor %}
  </div>
  <hr>
  {% for restaurant in restaurants.Restaurants %}
    <h4><a href="{{ restaurant.url }}" target="_blank">{{ restaurant.Name }}</a></h4>
    <h5>{{ restaurant.Cuisine }}</h5>
    <p>{{ restaurant.Address }}</p>
    <hr>
  {% endfor %}
</div>
{% endblock %}